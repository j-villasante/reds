<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:id="@+id/fullscreen_content"
    tools:context="com.berry.blue.reds.StartActivity">
    <Button
        android:id="@+id/rla_play_one_layout"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:keepScreenOn="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_play_circle_outline_black_24dp" />
    <Button
        android:id="@+id/rla_play_two_layout"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:keepScreenOn="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_search_black_24dp" />
    <TextView
        android:id="@+id/tvi_main_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="120sp" />
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/success_animation_view"
        app:lottie_fileName="favourite_app_icon.json"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/error_animation_view"
        app:lottie_fileName="x_pop.json"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
</RelativeLayout>
